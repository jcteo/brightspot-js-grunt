# editorconfig.org
root = true

# General:
# Please override these defaults as needed
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

# Language specific
[*.xml]
indent_style = space
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

# File specific
[package.json]
indent_style = space
indent_size = 2
